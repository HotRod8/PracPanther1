<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PP.MAUIApp.Views.TimeDetailPage"
             Title="Time Details"
             NavigatedTo="OnArrived">

    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Enter your hours here:"/>
            <Entry Grid.Column="1" Text="{Binding Path=Clock.Hours}"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--<Textbox Grid.Column="0" x:Name="ProjectGoals" Width="300"
                                 AcceptsReturn="True" HorizontalAlignment="Left"   
                                 Header="Enter your goals here:" 
                                 Text="{Binding Path=Clock.Narrative}"/>-->
            <Label Grid.Column="0" Text="Enter your goals here:"/>
            <Entry Grid.Column="1" Text="{Binding Path=Clock.Narrative}"/>
            <Button Grid.Column="2" Text="Save"  Clicked="SaveClicked"/>
        </Grid>
        <Button Text="Go Back" Clicked="GoBackClicked"/>
    </VerticalStackLayout>
</ContentPage>